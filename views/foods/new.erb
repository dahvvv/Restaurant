<% if @errors %>
  <div class="errors">
    <h1>ERROR!  THAT FOOD IZ ALREADY IN DA MENU!</h1>
    <ul>
      <% @errors.each do |error| %>
        <li>
          <h2><%=error%></h2>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>ADD A NEW FOOD</h1>

<form action="/foods" method="post">
  <input type="text" name="food[name]" placeholder="food name" /><br>
  <input type="text" name="food[cuisine_type]" placeholder="cuisine type" /><br>
  <input type="hidden" name="food[price]" value="0">
  $<input type="text" name="food[dollars]" placeholder="dollars" />.<input type="text" name="food[cents]" placeholder="cents" /><br>
  <input type="text" name="food[allergens]" placeholder="any allergens?" /><br>
  <input type="submit" value="ADD NEW FOOD">
</form>

