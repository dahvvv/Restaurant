<ul>
  <li>Table Number:  <%=@party.table_number%></li>
  <li>Number of Guests:  <%=@party.number_of_guests%></li>
  <li>Paid?:  <%=@party.paid%></li>
  <li>ID:  <%=@party.id%></li>
  <li>Order:
    <% if @orders.count > 0 %>
      <ul>
        <% @total = 0 %>
        <% @orders.each do |order| %>
          <li>
            <%=Food.where(:id => order.food_id)[0].name%> - $<%=order.charge%>
          </li>
        <% @total += order.charge.to_f.round(2)%>
        <% end %>
        <li>
          Total:  $<%=@total.round(2)%>
        </li>
      </ul>
    <% else %>
      No Orders Yet
    <% end %>
  </li>
</ul>

