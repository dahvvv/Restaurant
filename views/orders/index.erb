<h1>Orders for Table Number <%=@table_number%></h1>
<table>
  <th>Food</th>
  <th>Order Id</th>
  <th>Price</th>
  <% @orders.each do |order| %>
    <tr>
      <td>
        <a href="/orders/<%=order.id%>"><%=Food.find(order.food_id).name%></a>
      </td>
      <td>
        <%=order.id%>
      </td>
      <td>
        $<%= order.no_charge == false ? Food.find(order.food_id).priceprint : 0.00%>
      </td>
    </tr>
  <% end %>
</table>

